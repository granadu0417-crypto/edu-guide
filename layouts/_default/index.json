{{- $index := slice -}}
{{- range where .Site.RegularPages "Type" "in" (slice "high" "middle" "elementary" "subjects" "tutoring" "exam" "local" "consultation") -}}
  {{- $index = $index | append (dict
    "title" .Title
    "url" .RelPermalink
    "description" (.Description | default "" | plainify | truncate 200)
    "content" (.Content | plainify | truncate 300)
    "categories" (.Params.categories | default slice)
    "tags" (.Params.tags | default slice)
    "date" (.Date.Format "2006-01-02")
  ) -}}
{{- end -}}
{{- $index | jsonify -}}

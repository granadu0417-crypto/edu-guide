    font-size: 18px;
  }

  .kakao-subtitle {
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .kakao-btn-hero {
    padding: 18px 32px;
    font-size: 16px;
    width: 100%;
    max-width: 320px;
  }
}
